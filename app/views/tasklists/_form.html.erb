<%= form_for(tasklist) do |f| %>
<% if tasklist.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tasklist.errors.full_messages.each do |tasklist| %>
          <li><%= tasklist %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'タスクリスト' %>
  <%= f.text_field :content %>

  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  
  <%= f.submit '投稿' %>
<% end %>